{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "cache": false
        },
        "lint": {
            "outputs": [],
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "persistent": true,
            "cache": false
        }
    }
}
