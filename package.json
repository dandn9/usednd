{
    "name": "@dandn/usednd",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --no-daemon",
        "lint": "turbo run lint",
        "test": "pnpm run -F lib test",
        "test:w": "pnpm run -F lib test:w",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "eslint": "latest",
        "prettier": "latest",
        "turbo": "^1.9.1",
        "typescript": "^4.9.3"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "packageManager": "pnpm@7.27.1"
}
